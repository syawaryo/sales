{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist/client" }
    },
    { "src": "api/token.js", "use": "@vercel/node" }
  ],

  "routes": [
    { "src": "/api/token", "dest": "/api/token.js" },
    { "handle": "filesystem" },
    { "src": "/.*", "dest": "/index.html" }
  ],

  "outputDirectory": "dist/client"
}
